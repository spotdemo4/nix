{
  "$schema": "https://docs.renovatebot.com/renovate-global-schema.json",

  // self-hosted
  "onboarding": false,
  "requireConfig": "ignored",
  "platform": "github",
  "repositories": ["spotdemo4/nix"],

  // repository
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["* * * * 0"] // sunday
  },
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "docker images",
      "managerFilePatterns": ["/.*.nix$/"],
      "matchStrings": [
        "image = \"?(?<depName>[^\\s:@\"]+)(?::(?<currentValue>[-a-zA-Z0-9.]+))?(?:@(?<currentDigest>sha256:[a-zA-Z0-9]+))?\"?"
      ],
      "autoReplaceStringTemplate": "image = \"{{{depName}}}:{{{newValue}}}{{#if newDigest}}@{{{newDigest}}}{{/if}}\"",
      "depTypeTemplate": "image",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "groupName": "nix inputs",
      "matchManagers": ["nix"]
    },
    {
      "groupName": "docker images",
      "matchManagers": ["custom.regex"],
      "matchDepTypes": ["image"],
      "pinDigests": true
    },
    {
      "groupName": "github actions",
      "matchManagers": ["github-actions"]
    }
  ]
}
