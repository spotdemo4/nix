{
  "editor.formatOnSave": true,
  "files.associations": {
    "renovate.json": "jsonc",
    ".envrc.project": "dotenv",
    ".envrc": "dotenv",
    "torrc": "ini"
  },

  // nix
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },

  // yaml & json
  "editor.defaultFormatter": "prettier.prettier-vscode"
}
